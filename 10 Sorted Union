function unite(arr1, arr2, arr3) {
  
  var arr=[];
  
  for(var i = 0; i < arguments.length; i ++){
    
    arr = arr.concat(arguments[i]);
    
  }
  
  for( i = 0; i< arr.length-1; i ++){
    
    for(var j = i+1; j< arr.length; j++){
      
      if(arr[j]===arr[i]){
        
        arr.splice(j,1);
    
      }
      
    }
    
  }
  
  
  
  return arr;
}

unite([1, 3, 2], [5, 2, 1, 4], [2, 1]);
