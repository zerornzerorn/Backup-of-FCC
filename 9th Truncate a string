function truncate(str, num) {
  // Clear out that junk in your trunk
  
  if(str.length <= num ){
    
    return str;
    
  } else if ( num < 3){
    
    var tempStr = str.slice(0, num);
    
    tempStr = tempStr + '...';
    
    return tempStr;
    
  } else {
  
    var tempString = str.slice(0, num-3);
  
    tempString = tempString + "...";
  
  
  return tempString;
  }
}

truncate("A-tisket a-tasket A green and yellow basket", 11);
