
function chunk(arr, size) {
  // Break it up.
  
  var subArr = [];
  
  var newArr =[];
  
  var i = 0;
  
  var j = 0;
  
  while (i < arr.length){
    
    
    subArr= arr.slice(i, i+size);
     
    newArr[j] = subArr;
    
     i += size;
    
    j++;
    
  }

  return newArr;
  
}

chunk([0, 1, 2, 3, 4, 5], 3)
